<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<StackPane fx:id="rootPane" prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VendasController">
   
   <children>
        <AnchorPane styleClass="bg-form" stylesheets="@GreenMatch.css">
         <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
         <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
         <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
         <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
         
         <effect>
            <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.3)" height="25.0" radius="12.0" width="25.0" />
         </effect>
         <children>
            <HBox alignment="CENTER_RIGHT" prefWidth="1400.0" spacing="8.0" style="-fx-background-color: linear-gradient(to right, rgba(0,0,0,0.3), rgba(0,0,0,0.2)); -fx-background-radius: 0 0 8 8;">
               <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
               <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
               <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
               <prefHeight>40.0</prefHeight>
               <padding>
                  <Insets bottom="20.0" left="15.0" right="15.0" top="8.0" />
               </padding>
               <children>
                  <Button fx:id="voltarButton" onAction="#onVoltarClick" styleClass="title-bar-button" prefHeight="28.0" prefWidth="28.0">
                     <graphic>
                        <FontAwesomeIconView fill="#b3e5d1" glyphName="ARROW_LEFT" size="1.2em" />
                     </graphic>
                  </Button>
                  
                  <HBox HBox.hgrow="ALWAYS" />
                  
                  <Button fx:id="btnCarrinho" mnemonicParsing="false" onAction="#onCarrinhoClick" prefHeight="28.0" prefWidth="28.0" styleClass="title-bar-button">
                     <graphic>
                        <FontAwesomeIconView fill="#b3e5d1" glyphName="SHOPPING_CART" size="0.9em">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </FontAwesomeIconView>
                     </graphic>
                  </Button>
                  
                  <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="28.0" styleClass="title-bar-button">
                     <graphic>
                        <FontAwesomeIconView fill="#b3e5d1" glyphName="USER" size="0.9em" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            
            <VBox alignment="CENTER" spacing="12.0">
               <AnchorPane.topAnchor>40.0</AnchorPane.topAnchor>
               <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
               <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
               <children>
                  <StackPane>
                     <children>
                        <FontAwesomeIconView fill="#4CAF50" glyphName="SHOPPING_CART" size="4.5em" />
                        <FontAwesomeIconView fill="rgba(76,175,80,0.3)" glyphName="CIRCLE" size="6em" />
                     </children>
                  </StackPane>
               </children>
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="search-header-glass">
               <AnchorPane.topAnchor>140.0</AnchorPane.topAnchor>
               <AnchorPane.leftAnchor>30.0</AnchorPane.leftAnchor>
               <AnchorPane.rightAnchor>30.0</AnchorPane.rightAnchor>
               <prefHeight>80.0</prefHeight>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">
                     <children>
                        <StackPane style="-fx-background-color: linear-gradient(to right, #4CAF50, #45a049); -fx-background-radius: 25; -fx-padding: 5;">
                           <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="1.3em" />
                        </StackPane>
                        <TextField fx:id="txtPesquisa" promptText="Pesquisar produtos, agricultores..." styleClass="search-field-glass" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_RIGHT" spacing="15.0">
                     <ComboBox fx:id="comboCategoria" prefWidth="160.0" promptText="🌿 Categoria" styleClass="combo-box" />
                     
                     <ComboBox fx:id="comboOrdenacao" prefWidth="160.0" promptText="📊 Ordenar" styleClass="combo-box" />
                     
                     <ComboBox fx:id="comboDistancia" prefWidth="130.0" promptText="📍 Raio" styleClass="combo-box" />
                  </HBox>
               </children>
            </HBox>

            <SplitPane fx:id="splitPane" dividerPositions="0.7" style="-fx-background-color: transparent; -fx-padding: 0;">
               <AnchorPane.topAnchor>245.0</AnchorPane.topAnchor>
               <AnchorPane.bottomAnchor>20.0</AnchorPane.bottomAnchor>
               <AnchorPane.leftAnchor>20.0</AnchorPane.leftAnchor>
               <AnchorPane.rightAnchor>20.0</AnchorPane.rightAnchor>
               
               <items>
                  <ScrollPane fx:id="scrollProdutos" fitToWidth="true" styleClass="scroll-pane-produtos">
                     <content>
                        <FlowPane fx:id="containerProdutos" hgap="25" styleClass="flow-pane-produtos" vgap="25" />
                     </content>
                  </ScrollPane>
                  
                  <VBox spacing="20.0" style="-fx-padding: 20;">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="search-header-glass">
                           <children>
                              <StackPane style="-fx-background-color: linear-gradient(to right, #4CAF50, #45a049); -fx-background-radius: 20; -fx-padding: 8;">
                                 <FontAwesomeIconView fill="WHITE" glyphName="MAP_MARKER" size="1.3em" />
                              </StackPane>
                              <VBox spacing="2.0">
                                 <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Mapa Real - Localização" />
                                 <Label style="-fx-text-fill: rgba(255,255,255,0.6); -fx-font-size: 12px;" text="OpenStreetMap com agricultores reais" />
                              </VBox>
                           </children>
                        </HBox>
                        
                        <StackPane styleClass="map-container-glass" VBox.vgrow="ALWAYS">
                           <children>
                              <WebView fx:id="webViewMapa" prefHeight="350.0" prefWidth="400.0" style="-fx-border-color: #4CAF50; -fx-border-width: 2; -fx-border-radius: 10;" />
                           </children>
                        </StackPane>

                        <VBox spacing="15.0" styleClass="map-panel-glass">
                           <children>
                              <Label style="-fx-text-fill: #b3e5d1; -fx-font-size: 15px; -fx-font-weight: bold;" text="📋 Informações de Localização" />
                              
                              <VBox spacing="12.0">
                                 <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <StackPane style="-fx-background-color: rgba(76,175,80,0.2); -fx-background-radius: 20; -fx-padding: 8;">
                                       <FontAwesomeIconView fill="#4CAF50" glyphName="ROAD" size="1em" />
                                    </StackPane>
                                    <VBox spacing="2.0">
                                       <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;" text="Distância" />
                                       <Label fx:id="lblDistancia" style="-fx-text-fill: #4CAF50; -fx-font-size: 14px; -fx-font-weight: bold;" text="-- km" />
                                    </VBox>
                                 </HBox>
                                 
                                 <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <StackPane style="-fx-background-color: rgba(179,229,209,0.2); -fx-background-radius: 20; -fx-padding: 8;">
                                       <FontAwesomeIconView fill="#b3e5d1" glyphName="CLOCK_ALT" size="1em" />
                                    </StackPane>
                                    <VBox spacing="2.0">
                                       <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;" text="Tempo estimado" />
                                       <Label fx:id="lblTempoViagem" style="-fx-text-fill: #b3e5d1; -fx-font-size: 14px; -fx-font-weight: bold;" text="-- min" />
                                    </VBox>
                                 </HBox>
                                 
                                 <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <StackPane style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 20; -fx-padding: 8;">
                                       <FontAwesomeIconView fill="#b3e5d1" glyphName="MAP_PIN" size="1em" />
                                    </StackPane>
                                    <VBox spacing="2.0" HBox.hgrow="ALWAYS">
                                       <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;" text="Localização" />
                                       <Label fx:id="lblEndereco" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 13px; -fx-wrap-text: true;" text="Selecione um produto para ver detalhes" />
                                    </VBox>
                                 </HBox>
                              </VBox>
                              
                              <Button fx:id="btnRotas" mnemonicParsing="false" onAction="#onCalcularRotas" styleClass="button-primary" text="🗺️ CALCULAR ROTA COMPLETA">
                                 <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="LOCATION_ARROW" size="1.1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </items>
            </SplitPane>

            <Label alignment="CENTER" style="-fx-alignment: center;" text="MERCADO AGRÍCOLA" textFill="#ffffff">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.5)" radius="5.0" />
               </effect>
               <AnchorPane.topAnchor>100.0</AnchorPane.topAnchor>
               <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
               <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
            </Label>
         </children>
      </AnchorPane>
   </children>
</StackPane>