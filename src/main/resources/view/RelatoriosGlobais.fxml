<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<StackPane fx:id="rootPane" prefHeight="800.0" prefWidth="1200.0"
           xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.RelatorioSistemaController">

    <children>
        <AnchorPane styleClass="bg-form" stylesheets="@GreenMatch.css">

            <!-- Cabeçalho -->
            <Label text="RELATÓRIOS GLOBAIS" textFill="#cca962" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" alignment="CENTER">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

            <!-- Botão Voltar -->
            <Button text="VOLTAR" fx:id="btnVoltar" onAction="#voltarDashboard"
                    style="-fx-background-color: linear-gradient(to right, #4CAF50, #45a049);
                           -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25;
                           -fx-padding: 10 25 10 25; -fx-cursor: hand;" 
                    AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0">
                <graphic>
                    <FontAwesomeIconView glyphName="ARROW_LEFT" fill="#ffffff" size="1.2em"/>
                </graphic>
            </Button>

            <!-- Corpo Principal -->
            <VBox spacing="25.0" AnchorPane.topAnchor="80.0" AnchorPane.bottomAnchor="40.0"
                  AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                  style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15;
                         -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 15; -fx-padding: 30;">

                <!-- Número de Clientes Ativos -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Clientes Ativos:" style="-fx-text-fill: #b3e5d1; -fx-font-size: 18;"/>
                    <Label fx:id="lblClientesAtivos" style="-fx-text-fill: #ffffff; -fx-font-size: 24; -fx-font-weight: bold;"/>
                </HBox>
                <Separator style="-fx-background-color: rgba(255,255,255,0.1);"/>

                <!-- Agricultores Mais Produtivos -->
                <Label text="Agricultores Mais Produtivos" style="-fx-text-fill: #cca962; -fx-font-size: 20;"/>
                <TableView fx:id="tabelaAgricultores" style="-fx-background-color: rgba(255,255,255,0.05);">
                    <columns>
                        <TableColumn fx:id="colAgricultorNome" text="Nome" prefWidth="400"/>
                        <TableColumn fx:id="colAgricultorProdutos" text="Produtos Cadastrados" prefWidth="200"/>
                    </columns>
                </TableView>

                <!-- Produtos Mais Procurados -->
                <Label text="Produtos Mais Procurados" style="-fx-text-fill: #cca962; -fx-font-size: 20;"/>
                <TableView fx:id="tabelaProdutos" style="-fx-background-color: rgba(255,255,255,0.05);">
                    <columns>
                        <TableColumn fx:id="colProdutoNome" text="Produto" prefWidth="400"/>
                        <TableColumn fx:id="colProdutoPedidos" text="Pedidos" prefWidth="200"/>
                    </columns>
                </TableView>

                <!-- Áreas com Mais Transações -->
                <Label text="Áreas com Mais Transações" style="-fx-text-fill: #cca962; -fx-font-size: 20;"/>
                <TableView fx:id="tabelaAreas" style="-fx-background-color: rgba(255,255,255,0.05);">
                    <columns>
                        <TableColumn fx:id="colAreaNome" text="Área" prefWidth="400"/>
                        <TableColumn fx:id="colAreaTransacoes" text="Transações" prefWidth="200"/>
                    </columns>
                </TableView>

            </VBox>

        </AnchorPane>
    </children>
</StackPane>
